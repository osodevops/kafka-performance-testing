---
extends: default

rules:
  line-length:
    max: 200
    level: warning
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  document-start:
    present: true
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore:
  - examples/
  - .github/
  - venv/
  - .build-venv/
  - .ansible/
  - inventories/
  - "*.tar.gz"
  - roles/tests/
